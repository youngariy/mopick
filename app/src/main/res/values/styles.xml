<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowBackground">@drawable/bg_app_surface</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorOnSurface</item>
        <item name="android:textColorPrimary">@color/colorOnSurface</item>
        <item name="android:textColorSecondary">@color/colorSubtleText</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorControlNormal">@color/colorOnSurface</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColorPrimary">@color/colorOnSurface</item>
        <item name="android:textColorSecondary">@color/colorSubtleText</item>
    </style>

    <style name="AppTheme.NoActionBar.DetailScreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorControlNormal">@color/colorOnSurface</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/colorOnSurface</item>
        <item name="android:textColorSecondary">@color/colorSubtleText</item>
    </style>

    <style name="AppTheme.NoActionBar.DetailScreen.MovieDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSurface">@color/colorMovieDetailSurface</item>
        <item name="colorOnSurface">@color/colorMovieDetailTextPrimary</item>
        <item name="android:textColorPrimary">@color/colorMovieDetailTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorMovieDetailTextSecondary</item>
        <item name="colorControlNormal">@color/colorMovieDetailTextPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/colorMovieDetailBackground</item>
        <item name="android:windowBackground">@drawable/bg_movie_detail_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimaryDark">@color/colorMovieDetailSurface</item>
        <item name="colorPrimary">@color/colorMovieDetailSurface</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>
