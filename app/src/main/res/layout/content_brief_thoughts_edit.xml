<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMovieDetailBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.youngariy.mopick.activities.BriefThoughtsEditActivity"
    tools:showIn="@layout/activity_brief_thoughts_edit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Content Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="64dp">

            <TextView
                android:id="@+id/text_view_content_title_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/content_title"
                android:textColor="@color/colorMovieDetailTextPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edit_text_content_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/content_title"
                android:textColor="@color/colorMovieDetailTextPrimary"
                android:textColorHint="@color/colorMovieDetailTextSecondary"
                android:textSize="16sp"
                android:inputType="text"
                android:maxLines="1"
                android:backgroundTint="@color/colorMovieDetailTextPrimary" />

            <TextView
                android:id="@+id/text_view_content_title_readonly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMovieDetailTextPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_search_content"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/search_content"
                android:textColor="@color/colorMovieDetailTextPrimary"
                app:cornerRadius="24dp" />

        </LinearLayout>

        <!-- Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="64dp">

            <TextView
                android:id="@+id/text_view_status_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textColor="@color/colorMovieDetailTextPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_status_watching"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/status_watching"
                    android:textColor="@color/colorMovieDetailTextPrimary"
                    app:cornerRadius="24dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_status_completed"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/status_completed"
                    android:textColor="@color/colorMovieDetailTextPrimary"
                    app:cornerRadius="24dp" />

            </LinearLayout>
            
            <TextView
                android:id="@+id/text_view_status_readonly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMovieDetailTextPrimary"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Rating -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="64dp">

            <TextView
                android:id="@+id/text_view_rating_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rating_question"
                android:textColor="@color/colorMovieDetailTextPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/layout_stars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start" />

            <TextView
                android:id="@+id/text_view_rating_readonly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMovieDetailTextPrimary"
                android:textSize="18sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Moods -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="64dp">

            <TextView
                android:id="@+id/text_view_moods_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mood_question"
                android:textColor="@color/colorMovieDetailTextPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_moods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/text_view_moods_readonly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMovieDetailTextPrimary"
                android:textSize="18sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Recommend -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="64dp">

            <TextView
                android:id="@+id/text_view_recommend_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recommend_question"
                android:textColor="@color/colorMovieDetailTextPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_recommend_yes"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/yes"
                    android:textColor="@color/colorMovieDetailTextPrimary"
                    app:cornerRadius="24dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_recommend_no"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no"
                    android:textColor="@color/colorMovieDetailTextPrimary"
                    app:cornerRadius="24dp" />

            </LinearLayout>
            
            <TextView
                android:id="@+id/text_view_recommend_readonly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMovieDetailTextPrimary"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_save"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/save"
                android:textColor="@android:color/white"
                app:cornerRadius="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_edit"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/edit"
                android:textColor="@android:color/white"
                android:visibility="gone"
                app:cornerRadius="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_delete"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/delete"
                android:textColor="@color/colorMovieDetailTextPrimary"
                android:visibility="gone"
                app:cornerRadius="24dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

